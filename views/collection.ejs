<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Css link -->
    <link rel="stylesheet" href="/style.css">
    <title>Booking System</title>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg " style="background-color: #CFFDE1;">
        <div class="container-fluid">
          <a class="navbar-brand logo" href="#">Booking System</a>
          
          <a class="nav-item item1" href="/create-Customer">Create Customer</a>
          <a class="nav-item item2" href="/create-product">Create Booking</a>
          <a class="nav-item item3" href="/">Home</a>
        </div>
        
      </nav>
      <h1 id="heading">Customer</h1>
      
      <!-- Collections -->
  <% if(Items.length === 0){ %>
      <h3>No Customer is registered</h3>
  <% } %>

 <div class="row ">
   <% Items.forEach(Element =>{ %>
    <div class="col-lg-3 col-md-4 col-sm-6 main">
        <div class="card">
        <div class="card-body">
          <h1 class="card-title"><%= Element.name %></h1>
          <p>Id: <%=Element.id %></p>
          <p>Contact: <%=Element.number %></p>
          <a href="/<%= Element.id %>/delete" style = " background-color: #CFFDE1 ; color: #5D9C59;"  class="btn">Delete</a>
          <a href="/<%= Element.id %>/update-customer"  style = " background-color: #CFFDE1 ; color: #5D9C59;" class="btn">Edit</a>
          <a href="/<%= Element.id %>/product"  style = " background-color: #CFFDE1 ; color: #5D9C59;" class="btn">Bookings</a>
        </div>
      </div>
    </div>
  <% }); %>

</div>
 
</body>
<script>
    function menu(){
        const toogleMenu=document.querySelector('.menu')
        toogleMenu.classList.toggle('active')
    }
</script>
</html>


