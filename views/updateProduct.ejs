<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- Bootstrap Link -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <!-- Css link -->
      <link rel="stylesheet" href="/style2.css">
    <title>Booking System</title>
</head>
<body>
 
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Booking System</a>
        </div>
        <div class="action">
            <div class="profile" onclick="menu();">
                <img src="/images/user.png" alt="">
            </div>
            <div class="menu">
                <ul>
                  <li><a href="/">Home</a></li>
                  <li><a href="/create-Customer">Create Customer</a></li>
                  <li><a href="/create-product">Create Booking</a></li>
                </ul>
            </div>
        </div>
      </nav>
      <!-- Main body -->
      <div class="update">
        <h1>Update Booking Details</h1>
        <form class="row g-3" action="/<%= collection%>/<%= Booking_id%>/update" method="post">
            <div class="col-12">
              <label for="Cname" class="form-label">Booking_id: </label>
              <input type="text" class="form-control" id="pname" name="bid" autocomplete="off" value="<%= Booking_id%>" readonly>
            </div>
            <div class="col-12">
                <label for="ImageUrl" class="form-label">Created Time: </label>
              <input type="text" class="form-control" id="ImageUrl" name="time" autocomplete="off" value="<%= Time %>" required>
            </div>

            <div class="col-12">
                <label for="price" class="form-label">Drone Shot Name: </label>
              <input type="text" class="form-control" id="price" name="dsname" autocomplete="off" value="<%= DSN %>"  required>
            </div>

            <div class="col-12">
              <button type="submit" class="btn btn-primary ">Update </button>
            </div>
          </form>
    </div>
</body>
<script>
    function menu(){
        const toogleMenu=document.querySelector('.menu')
        toogleMenu.classList.toggle('active')
    }
</script>
</html>