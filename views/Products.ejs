<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Css link -->
    <link rel="stylesheet" href="/style.css">
    <title>Booking System</title>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Booking System</a>
        </div>
        <div class="action">
            <div class="profile" onclick="menu();">
                <img src="/images/user.png" alt="">
            </div>
            <div class="menu">
                <ul>
                  <li><a href="/">Home</a></li>
                  <li><a href="/create-Customer">Create Customer</a></li>
                  <li><a href="/create-product">Create Booking</a></li>
                </ul>
            </div>
        </div>
      </nav>

      <h1 id="heading">Bookings</h1>
      
      <!-- Card -->
    <% if(Items.length === 0){ %>
        <h3>No Products to Show</h3>
    <% } %>
  
   <div class="row ">
     <% Items.forEach(Element =>{ %>
      <div class="col-lg-3 col-md-4 col-sm-6 main">
          <div class="card">
          <div class="card-body">
            <h1 class="card-title"><%= Element.id %></h1>
            <p>Created_time: <%=Element.time %></p>
            <p>Drone_shot_name: <%=Element.name %></p> 
            <a href="/<%=collection %>/<%= Element.id %>/delete" class="btn btn-primary">Delete</a>
            <a href="/<%=collection %>/<%= Element.id %>/update" class="btn btn-primary">Update</a>
          </div>
        </div>
      </div>
    <% }); %>
  
  </div>
   
</body>
<script>
    function menu(){
        const toogleMenu=document.querySelector('.menu')
        toogleMenu.classList.toggle('active')
    }
</script>
</html>
